    <script type="text/javascript">

    $("#Fecha").change(function () {
        var url = "/Pagos/Saldo";

        var fid = @Html.Raw(Json.Encode(Model.FamiliaID));
        //var fecha = new Date( $("#Fecha").val()).toISOString();
        // fecha = new Date( $("#Fecha").val()).toLocaleDateString();
